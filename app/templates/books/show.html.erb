<section class="section">
  <div class="navbar">
    <div class="navbar-menu">
      <div class="navbar-start">
        <%= link_to _("List"), routes.path(:list_books), class: "navbar-item" %>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <h1 clas="title">Bookshelf::Views::Books::Show</h1>

  <h2 class="subtitle">Show book</h2>

  <div class="columns">
    <div class="column">
      <div class="card">
        <div class="card-header">
          <div class="card--header-title"><%= book[:title] %></div>
          <div class="card-header-icon"></div>
        </div>
        <div class="card-content">
          <div>By <%= book[:author] %></div>
        </div>
      </div>
    </div>
  </div>
</div>
