<% if flash[:alert] || flash[:notice] %>
  <section class="section">
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <button class="delete"></button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="notification is-success">
        <button class="delete"></button>
        <%= flash[:notice] %>
      </div>
    <% end %>
  </section>
<% end %>
